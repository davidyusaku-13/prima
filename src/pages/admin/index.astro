---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Admin">
    <section class="panel">
        <h1>Admin</h1>
        <p>Manage privileged resources.</p>

        <nav class="admin-nav">
            <a href="/">Home</a>
            <a href="/admin/health">Health</a>
            <a href="/admin/users">Users</a>
        </nav>
    </section>
</Layout>

<style>
    .panel {
        background: #ffffff;
        border: 1px solid #dce6f7;
        border-radius: 16px;
        padding: clamp(1rem, 2.5vw, 1.5rem);
        box-shadow: 0 12px 30px rgba(15, 23, 42, 0.08);
    }

    h1 {
        margin: 0 0 0.5rem;
        font-size: clamp(1.25rem, 3vw, 1.6rem);
        line-height: 1.25;
    }

    p {
        margin: 0.4rem 0 0.85rem;
        color: #374151;
    }

    .admin-nav {
        display: flex;
        gap: 0.75rem;
    }

    .admin-nav a {
        display: inline-block;
        text-decoration: none;
        color: #1d4ed8;
        border: 1px solid #bfdbfe;
        background: #eff6ff;
        border-radius: 999px;
        padding: 0.4rem 0.8rem;
        font-weight: 600;
    }

    .admin-nav a:hover {
        background: #dbeafe;
    }
</style>
